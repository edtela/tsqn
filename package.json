{
  "name": "tsqn",
  "version": "0.1.0",
  "description": "TypeScript Query Notation - Declarative data updates with automatic change tracking",
  "keywords": [
    "typescript",
    "update",
    "query",
    "state",
    "immutable",
    "data",
    "transformation"
  ],
  "author": "Edvin",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run test:run && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edvin/tsqn.git"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "is-mergeable-object": "^1.1.1"
  }
}
